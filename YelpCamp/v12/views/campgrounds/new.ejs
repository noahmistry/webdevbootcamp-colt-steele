<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align:center";>
	Create a new campground
	</h1>
<div  style="width:40%; margin: 30px auto";>
	<form action="/campgrounds" method="POST">
  <div class="form-group">
    <label for="formGroupNewCampground">New Campground Name</label>
	  <div class="form-row">
		    <input type="text" name="newCampgroundName" class="form-control" id="formGroupNewCampground" placeholder="Name">
	  </div>
  </div>
  <div class="form-group">
    <label for="formGroupNewCampground">Campground Price</label>
	  <div class="form-row">
		  <!-- Change type to number so only numbers are allowed -->
		  <!-- Set min number value to 1 penny and step value to increment min value for every penny -->
		    <input type="number" name="newCampgroundPrice" class="form-control" id="formGroupNewCampgroundPrice" placeholder="price" min="0.01" step="0.01">
	  </div>
  </div>
  <div class="form-group">
    <label for="formGroupNewCampgroundImage">New Image</label>
	  <div class="form-row">
	    <input type="text" name="newImageUrl" class="form-control" id="formGroupNewCampgroundImage" placeholder="New Campground Image">			  
	  </div>
  </div>
		<div class="form-group">
    <label for="formGroupNewCampgroundImage">Campground Description</label>
	  <div class="form-row">
	    <input type="text" name="newCampgroundDescription" class="form-control" id="formGroupNewCampgroundImage" placeholder="Description">			  
	  </div>
  </div>
	<div class="form-group">
	  <button type="submit" class="btn btn-primary btn-block">Submit</button>
	</div>
</form>
	<a href="/campgrounds">Go back</a>	
</div>
</div>

<%- include("../partials/footer") %>