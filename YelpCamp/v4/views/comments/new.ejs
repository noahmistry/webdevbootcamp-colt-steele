<% include ../partials/header %>

<div class="container">
	<h1 style="text-align:center";>Add New Comment to <%= campground.name %></h1>
<div  style="width:40%; margin: 30px auto";>
	<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
  <div class="form-group">
	  <div class="form-row">
		    <input type="text" name="comment[text]" class="form-control" placeholder="text">
	  </div>
  </div>
	<div class="form-group">
	  <div class="form-row">
	    <input type="text" name="comment[author]" class="form-control" placeholder="author">			  
	  </div>
  </div>
	<div class="form-group">
	  <button type="submit" class="btn btn-primary btn-block">Submit</button>
	</div>
</form>
	<a href="/campgrounds">Go back</a>	
</div>
</div>

<% include ../partials/footer %>


