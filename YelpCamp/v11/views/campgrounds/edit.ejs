<!-- NEW FOR EJS 3.0.1 -->
<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align:center";>
	Edit <%= campground.name %>
	</h1>
<div  style="width:40%; margin: 30px auto";>
	<!-- We can use campground._id because it is defined and found by the {campground:foundCampground} in the campground route -->
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="formGroupNewCampground">New Campground Name</label>
	  <div class="form-row"> 
		  <!-- campground[name,image,description] nested in one object -->
		    <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
	  </div>
  </div>
  <div class="form-group">
    <label for="formGroupNewCampgroundImage">New Image</label>
	  <div class="form-row">
	    <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>"">
	  </div>
  </div>
		<div class="form-group">
    <label for="formGroupNewCampgroundImage">Campground Description</label>
	  <div class="form-row">
	    <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>">			  
	  </div>
  </div>
	<div class="form-group">
	  <button type="submit" class="btn btn-primary btn-block">Submit</button>
	</div>
</form>
	<a href="/campgrounds">Go back</a>	
</div>
</div>

<%- include("../partials/footer") %>